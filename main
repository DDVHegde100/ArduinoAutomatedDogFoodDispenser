
#include <Servo.h>
#include <ezButton.h>


const int BUTTON_PIN = 7; 
const int SERVO_PIN  = 9; 

ezButton button(BUTTON_PIN); 
Servo servo;                


int angle = 0; 

void setup() {
  Serial.begin(9600);         
  button.setDebounceTime(50);
  servo.attach(SERVO_PIN);

  servo.write(angle);
}

void loop() {
  button.loop()

  if(button.isPressed()) {
    Serial.println("The button has been pressed");

    if(angle == 0)
      angle = 359;
    else
    if(angle == 359)
      angle = 0;

    servo.write(angle);
  }
}
